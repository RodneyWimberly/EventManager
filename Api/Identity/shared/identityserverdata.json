{
    "IdentityServerData": {
        "IdentityResources": [
            {
                "Name": "roles",
                "Enabled": true,
                "DisplayName": "Roles",
                "UserClaims": [
                    "role"
                ]
            },
            {
                "Name": "openid",
                "Enabled": true,
                "Required": true,
                "DisplayName": "Your user identifier",
                "UserClaims": [
                    "sub"
                ]
            },
            {
                "Name": "profile",
                "Enabled": true,
                "DisplayName": "User profile",
                "Description": "Your user profile information (first name, last name, etc.)",
                "Emphasize": true,
                "UserClaims": [
                    "name",
                    "family_name",
                    "given_name",
                    "middle_name",
                    "nickname",
                    "preferred_username",
                    "profile",
                    "picture",
                    "website",
                    "gender",
                    "birthdate",
                    "zoneinfo",
                    "locale",
                    "updated_at"
                ]
            },
            {
                "Name": "email",
                "Enabled": true,
                "DisplayName": "Your email address",
                "Emphasize": true,
                "UserClaims": [
                    "email",
                    "email_verified"
                ]
            },
            {
                "Name": "address",
                "Enabled": true,
                "DisplayName": "Your address",
                "Emphasize": true,
                "UserClaims": [
                    "address"
                ]
            }
        ],
        "ApiResources": [
            {
                "Name": "urn:em:api",
                "Scopes": [
                    {
                        "Name": "urn:em:scope:api",
                        "DisplayName": "Event Manager API Scope",
                        "Required": true,
                        "UserClaims": [
                            "role",
                            "name"
                        ]
                    }
                ]
            }
        ],
        "Clients": [
            {
                "ClientId": "urn:em:client",
                "ClientName": "Event Manager Identity Admin Client",
                "ClientUri": "https://id-web.em.local",
                "AllowedGrantTypes": [
                    "authorization_code"
                ],
                "RequirePkce": true,
                "ClientSecrets": [
                    {
                        "Value": "eventmanagersecret"
                    }
                ],
                "RedirectUris": [
                    "https://id-web.em.local/signin-oidc"
                ],
                "FrontChannelLogoutUri": "https://id-web.em.local/signout-oidc",
                "PostLogoutRedirectUris": [
                    "https://id-web.em.local/signout-callback-oidc"
                ],
                "AllowedCorsOrigins": [
                    "https://id-web.em.skoruba.local"
                ],
                "AllowedScopes": [
                    "openid",
                    "email",
                    "profile",
                    "roles",
                    "urn:em:scopes:api"
                ]
            },
            {
                "ClientId": "urn:em:client_api_swaggerui",
                "ClientName": "Event Manager Identity API Documentation",
                "AllowedGrantTypes": [
                    "authorization_code"
                ],
                "RequireClientSecret": false,
                "RequirePkce": true,
                "RedirectUris": [
                    "https://id-api.em.local/swagger/oauth2-redirect.html"
                ],
                "AllowedScopes": [
                    "urn:em:scopes:api"
                ],
                "AllowedCorsOrigins": [
                    "https://id-api.em.local"
                ]
            }
        ]
    }
}
