  "AdminApiConfiguration": {
    "ApiName": "Event Manager Identity Api",
    "ApiVersion": "v1",
    "ApiBaseUrl": "https://api.em.host/identity",
    "IdentityServerBaseUrl": "https://sts.em.host",
    "OidcSwaggerUIClientId": "urn:em:client_api_swaggerui",
    "OidcApiName": "urn:em:client_api",
    "AdministrationRole": "Admin",
    "RequireHttpsMetadata": false,
    "CorsAllowAnyOrigin": true,
    "CorsAllowOrigins": []
