{
    "IdentityServerData": {
        "IdentityResources": [
            {
                "Name": "roles",
                "Enabled": true,
                "DisplayName": "Roles",
                "UserClaims": [
                    "role"
                ]
            },
            {
                "Name": "openid",
                "Enabled": true,
                "Required": true,
                "DisplayName": "Your user identifier",
                "UserClaims": [
                    "sub"
                ]
            },
            {
                "Name": "profile",
                "Enabled": true,
                "DisplayName": "User profile",
                "Description": "Your user profile information (first name, last name, etc.)",
                "Emphasize": true,
                "UserClaims": [
                    "name",
                    "family_name",
                    "given_name",
                    "middle_name",
                    "nickname",
                    "preferred_username",
                    "profile",
                    "picture",
                    "website",
                    "gender",
                    "birthdate",
                    "zoneinfo",
                    "locale",
                    "updated_at"
                ]
            },
            {
                "Name": "email",
                "Enabled": true,
                "DisplayName": "Your email address",
                "Emphasize": true,
                "UserClaims": [
                    "email",
                    "email_verified"
                ]
            },
            {
                "Name": "address",
                "Enabled": true,
                "DisplayName": "Your address",
                "Emphasize": true,
                "UserClaims": [
                    "address"
                ]
            }
        ],
        "ApiScopes": [
            {
                "Name": "urn:em:api:scope",
                "DisplayName": "Event Manager API Scope",
                "Required": true,
                "UserClaims": [
                    "role",
                    "name"
                ]
            }
        ],
        "ApiResources": [
            {
                "Name": "urn:em:api",
              "Scopes": [
                "urn:em:api:scope"
              ]
            }
        ],
        "Clients": [
          {
            "ClientId": "urn:em:client",
            "ClientName": "urn:em:client",
            "ClientUri": "https://www.em.host/admin/identity",
            "AllowedGrantTypes": [
              "authorization_code"
            ],
            "RequirePkce": true,
            "ClientSecrets": [
              {
                "Value": "eventmanagersecret"
              }
            ],
            "RedirectUris": [
              "https://www.em.host/admin/identity/signin-oidc"
            ],
            "FrontChannelLogoutUri": "https://www.em.host/admin/identity/signin-oidc",
            "PostLogoutRedirectUris": [
              "https://www.em.host/admin/identity/signout-callback-oidc"
            ],
            "AllowedCorsOrigins": [
              "https://www.em.host"
            ],
            "AllowedScopes": [
              "openid",
              "email",
              "profile",
              "roles",
              "urn:em:api:scope"
            ]
          },
            {
                "ClientId": "urn:em:client_api_swaggerui",
                "ClientName": "urn:em:client_api_swaggerui",
                "AllowedGrantTypes": [
                    "authorization_code"
                ],
                "RequireClientSecret": false,
                "RequirePkce": true,
              "RedirectUris": [
                "https://api.em.host/docs/identity/oauth2-redirect.html"
              ],
                "AllowedScopes": [
                    "urn:em:api:scope"
                ],
              "AllowedCorsOrigins": [
                "https://api.em.host"
              ]
            }
        ]
    }
}